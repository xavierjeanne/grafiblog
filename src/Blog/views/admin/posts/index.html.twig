{% extends '@admin/layout.html.twig' %}
{% block title "editer les articles" %}


{% block body %}
	<p class="text-right">
		<a href="{{path(routePrefix ~'.create')}}" class="btn btn-danger">Ajouter un article</a>
	</p>
	<table class="table table-striped">
		<thead>
			<tr>
				<td>Titre</td>
				<td>Catégorie</td>
				<td>Actions</td>
			</tr>
		</thead>
		<tbody>
			{% set token_input = csrf_input() %}
			{% for item in items %}
				<tr>
					<td>{{item.name}}</td>
					<td>{{item.categoryName}}</td>
					<td>
						<a href="{{path(routePrefix ~'.edit',{id:item.id})}}" class="btn btn-primary">Editer</a>
						<form style="display:inline;" action="{{path(routePrefix ~'.delete',{id:item.id})}}" method="POST" onsubmit="return confirm('êtes vous sur?')">
							{{token_input |raw}}
							<input type="hidden" name="_method" value="DELETE">
							<button class="btn btn-danger">Supprimer</button>
						</form>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{paginate(items,routePrefix ~'.index')}}
{% endblock %}
